  "labs": [
    {
      "id": "01-rag-pipeline",
      "name": "Fix the Broken RAG Pipeline",
      "description": "Debug chunking, search, and context assembly in a production RAG system",
      "difficulty": "intermediate",
      "estimatedTime": "45m",
      "language": "python",
      "objectives": [
        "Identify and fix chunk_size/overlap configuration bugs",
        "Implement hybrid search (semantic + keyword)",
        "Optimize context length for LLM consumption"
      ],
      "skills": ["rag-expert", "python-pro", "vector-search"],
      "path": "labs/01-rag-pipeline"
    },
    {
      "id": "02-multi-agent-system",
      "name": "Build a Multi-Agent System",
      "description": "Implement a coordinator that orchestrates Researcher, Analyst, and Writer agents",
      "difficulty": "advanced",
      "estimatedTime": "60m",
      "language": "python",
      "objectives": [
        "Implement the Coordinator class with agent orchestration",
        "Add error handling and retry logic",
        "Test multi-agent workflow end-to-end"
      ],
      "skills": ["multi-agent-patterns", "python-pro", "async-patterns"],
      "path": "labs/02-multi-agent-system"
    },
    {
      "id": "03-mcp-server",
      "name": "Build Your Own MCP Server",
      "description": "Create a TypeScript MCP server with 3 tools for Claude Code",
      "difficulty": "advanced",
      "estimatedTime": "60m",
      "language": "typescript",
      "objectives": [
        "Implement 3 MCP tools following protocol spec",
        "Add proper error handling and validation",
        "Test server integration with Claude Code"
      ],
      "skills": ["mcp-architecture", "typescript-pro", "tool-design"],
      "path": "labs/03-mcp-server"
    }
